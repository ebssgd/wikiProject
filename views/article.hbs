<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Wiki</title>
    <link rel="stylesheet" href="css/site.css" />
  </head>

  <body>
    <div>
      <aside>
        <div class="center">
          <img class="logo" src="img/logo.png" alt="logo" />
        </div>

        <nav>
          <a href="/">Main Page</a>
          <a href="/allArticles">All Articles</a>
          <form>
            <input type="text" />
            <input type="submit" value="Search" />
          </form>
          <a href="/createArticle">Create New Article</a>
        </nav>
      </aside>
      <div id="container">
        <header>
          <a href="/login">Login</a>
          <a href="/register">Register</a>
          <span>Welcome, Bob!</span>
          <a href="/logout">[Logout]</a>
        </header>
        <main>
          <h1>Welcome to KingUni Wiki!</h1>
          <div class="spacer">
            {{#with article}}
            <h2>{{title}}
              <div class="controls">
                <a href="/editArticle/{{_id}}">[edit]</a>
                <a href="/delete">[delete]</a>
              </div>
            </h2>
            <article>
              <p>
                {{content}}
              </p>
              {{/with}}
            </article>
          </div>
        </main>
        <footer>
          KingUni Wiki &copy; 2021
        </footer>
      </div>
    </div>
  </body>

</html>